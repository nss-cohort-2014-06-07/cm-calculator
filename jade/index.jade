doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    title
    link(href='css/ionic.app.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    script(src='lib/ionic/js/ionic.bundle.js')
    script(src='cordova.js')
    script(src='js/app.js')
    script(src='js/main_controller.js')
  body(ng-app='cm-calculator', ng-controller='MainCtrl')
    .bar.bar-header.bar-calm
      h1.title Basic Calc+

    ion-content.has-header
      .display {{display}}
      .button-bar
        a.button(ng-click='number(7)') 7
        a.button(ng-click='number(8)') 8
        a.button(ng-click='number(9)') 9
        a.button.button-energized(ng-click='op("+")') +
      .button-bar
        a.button(ng-click='number(4)') 4
        a.button(ng-click='number(5)') 5
        a.button(ng-click='number(6)') 6
        a.button.button-energized(ng-click='op("-")') -
      .button-bar
        a.button(ng-click='number(1)') 1
        a.button(ng-click='number(2)') 2
        a.button(ng-click='number(3)') 3
        a.button.button-energized(ng-click='op("*")') &times;
      .button-bar
        a.button(ng-click='number(0)') 0
        a.button(ng-click='decimal()') .
        a.button.button-energized(ng-click='compute()') =
        a.button.button-energized(ng-click='op("/")') &div;
      .button-bar
        a.button
        a.button
        a.button
        a.button.button-balanced(ng-click='clear()') C

    .bar.bar-footer.bar-stable
      .center
        small &copy; 2014, Chyld
